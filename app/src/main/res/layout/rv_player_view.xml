<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:layout_marginHorizontal="10dp"
    android:scrollbars="vertical"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rv_Playerimg"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginLeft="20dp"
            app:civ_border_width="2dp"
            android:layout_marginBottom="10dp"
            app:civ_border_color="#FF000000" />
            <Button
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="Edit"
                android:id="@+id/rv_PlayerEdit"
                android:backgroundTint="#4CAF50"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                />
        <Button
            android:layout_width="100dp"
            android:layout_marginLeft="20dp"
            android:text="delete"
            android:id="@+id/rv_PlayerDelete"
            android:backgroundTint="#CC0A0A"
            android:layout_height="60dp"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

       <TextView
           android:id="@+id/Tv_PlayerName"
           android:layout_width="245dp"
           android:layout_height="60dp"
           android:gravity="center"
           android:layout_marginBottom="10dp"
           />
        <TextView
            android:id="@+id/Tv_PlayerNumber"
            android:layout_width="245dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/Tv_PlayerAge"
            android:layout_width="245dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="245dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:id="@+id/Tv_PlayerTeam" />
    </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditPlayerScrollView"
        android:visibility="gone">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Goals number : "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:id="@+id/UpdatePlayerGoals"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Assists number : "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:id="@+id/UpdatePlayerAssist"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Appearances : "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"

                android:id="@+id/UpdatePlayerAppearances"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Red Cards : "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"

                android:id="@+id/UpdatePlayerRedCards"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Yellow Cards : "/>

            <EditText
                android:id="@+id/UpdatePlayerYellowCards"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"

                android:inputType="number" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_PlayerDone"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Done"/>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>

</androidx.cardview.widget.CardView>