<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_desgin1"
    tools:context=".ui.TeamChange.TeamChange">


       <ImageView
        android:visibility="visible"
        android:scaleType="fitXY"
        android:alpha=".55"
        android:src="@drawable/manage6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ImageView>
    <LinearLayout
        android:background="@android:color/transparent"
        android:id="@+id/mylayout1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:visibility="gone"
        android:id="@+id/text_Change"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="#111"
        android:background="@android:color/transparent"
        android:fontFamily="@font/font3"
        android:gravity="center|right"
        android:paddingRight="60dp"
        android:text="שינוי פרטי קבוצה"

        android:textSize="14sp"
        />

    <Spinner


        android:layout_marginTop="130dp"
        android:paddingLeft="18dp"
        android:gravity="left"
        android:id="@+id/spinner"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/spinner_design"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:textSize="12sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/edit_text_design"
        android:drawableStart="@drawable/custom_team"
        android:hint="Team Manger"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:id="@+id/EdTChangeTeamName"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:drawablePadding="12dp"
        android:ems="10"
        android:textSize="12sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/edit_text_design"
        android:drawableStart="@drawable/custom_person"
        android:hint="Team Manger"
        android:layout_marginBottom="30dp"
        android:id="@+id/EdTChangeTeamManger"
        />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/teamChangeImg"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/salah2"
            android:visibility="visible" />
    </LinearLayout>
    <LinearLayout

        android:weightSum="2"
        android:gravity="bottom|center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">




    <android.widget.Button
        android:layout_weight=".80"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Update"
        android:id="@+id/BtnChangeTeam"
        android:layout_marginLeft="10dp"

        android:background="@drawable/btntest"
        android:shadowColor="#FF0026"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:textStyle="italic"
        android:textColor="@color/white"/>

    <android.widget.Button
        android:layout_weight=".80"
        android:id="@+id/BtnChangeImg"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"

        android:background="@drawable/btntest"
        android:shadowColor="#FF0026"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Change Image"
        android:textColor="@color/white"
        android:textStyle="italic" />
    </LinearLayout>
        </LinearLayout>

</RelativeLayout>


