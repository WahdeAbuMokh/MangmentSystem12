<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:scrollbars="vertical"
    app:cardCornerRadius="2dp">
    <LinearLayout
        android:background="#961F35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#fff"
                android:textStyle="bold"
                android:text=""
                android:fontFamily="@font/font3"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:textSize="24sp"
                 android:gravity="center"
                android:id="@+id/TvRvMatchTime"

                />
            <TextView
                android:textColor="#fff"
                android:textStyle="bold"
                android:text=""
                android:fontFamily="@font/font3"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:textSize="24sp"
                android:id="@+id/TvRvMatchDate"
                />
        </LinearLayout>
        <LinearLayout
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


              <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/team1Rvimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_background"
                app:civ_border_width="2dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="loading.."
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/team1Rvtv"
                    />
            </LinearLayout>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:text="VS"
                android:textColor="#D5CF49"
                android:fontFamily="@font/font2"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/team2Rvimg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_launcher_background"
                    app:civ_border_width="2dp"
                   />
                <TextView
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="loading.."
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/team2Rvtv"

                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
       android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <android.widget.Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Delete"
            android:layout_marginLeft="10dp"
            android:id="@+id/BtnDeleteMatch"
            android:background="@drawable/btntest"
            android:shadowColor="#FF0026"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:textColor="@color/white"/>
        <android.widget.Button
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:text="Start"
            android:id="@+id/BtnStartMatch"
            android:background="@drawable/btntest"
            android:shadowColor="#FF0026"
            android:layout_marginLeft="10dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:textColor="@color/white"/>
    </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="20dp"></View>
    </LinearLayout>

</androidx.cardview.widget.CardView>