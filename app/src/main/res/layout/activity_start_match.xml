<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartMatchActivity">

    <LinearLayout
        android:background="@drawable/manage6"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:background="#961F35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:visibility="visible"
                android:layout_weight="1"
                android:text="A"
                android:fontFamily="@font/font3"
                android:id="@+id/TvStartMatchDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:inputType="date"
                android:textSize="24sp"

                />

            <TextView

                android:textColor="#fff"
                android:fontFamily="@font/font3"
                android:id="@+id/TvStartMatchTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="time"
                android:text="20:20"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/team1StartMatchimg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/ic_launcher_background"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="0dp" />

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/team1StartMatchtv"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="loading.."
                    android:textSize="12sp" />
                <TextView
                    android:textColor="#fff"
                    android:id="@+id/TvStartMatchResult1"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="24sp" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:fontFamily="@font/font2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center|top"
                android:textColor="#D5CF49"
                android:gravity="center"
                android:text="VS"
                android:textSize="20sp" />

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/team2StartMatchimg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/ic_launcher_background"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="0dp" />

                <TextView
                    android:textColor="#fff"
                    android:id="@+id/team2StartMatchtv"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="loading.."
                    android:textSize="12sp"

                    />
                <TextView
                    android:textColor="#fff"
                    android:id="@+id/TvStartMatchResult2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>






        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner

                android:id="@+id/spinnerTeam"
                android:background="@drawable/spinner_design"
                android:layout_width="220dp"
                android:layout_height="40dp" />

            <Spinner
                android:layout_marginTop="7dp"
                android:id="@+id/spinnerPlayer"
                android:background="@drawable/spinner_design"
                android:layout_width="220dp"
                android:layout_height="40dp" />

            <Spinner
                android:layout_marginTop="7dp"
                android:id="@+id/spinnerStatus"
                android:background="@drawable/spinner_design"
                android:layout_width="220dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/btnChangeStats"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/btntest"
                android:shadowColor="#FF0026"
                android:layout_marginLeft="20dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="0"
                android:text="Change Stats"
                android:textColor="@color/white"
                />

            <android.widget.Button
                android:id="@+id/btnExitMatch"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/btntest"
                android:shadowColor="#FF0026"
                android:layout_marginLeft="20dp"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="0"
                android:text="Exit"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <android.widget.Button
                android:id="@+id/btnStartGame"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btntest"
                android:shadowColor="#FF0026"
                android:shadowDx="6.3"
                android:shadowDy="0"
                android:shadowRadius="6"
                android:text="Start Match"
                android:textColor="@color/white"
                android:textStyle="italic" />

            <android.widget.Button
                android:id="@+id/btnEndMatch"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btntest"
                android:shadowColor="#FF0026"
                android:shadowDx="6.3"
                android:shadowDy="0"
                android:shadowRadius="6"
                android:text="Stop Match"
                android:textColor="@color/white"
                android:textStyle="italic" />

            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
            <Chronometer
                android:textColor="#BBD532"
                android:background="@drawable/rounded"
                android:id="@+id/chronometer1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/font3"
                android:gravity="center"
                android:textSize="17sp" />

            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/StatsTV1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
    </LinearLayout>
</LinearLayout>