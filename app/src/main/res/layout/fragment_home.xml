<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/background_desgin1"
    tools:context=".ui.home.HomeFragment">
       <ImageView
        android:visibility="visible"
        android:scaleType="fitXY"
        android:alpha=".55"
        android:src="@drawable/manage6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ImageView>
    <LinearLayout
        android:background="@android:color/transparent"
        android:id="@+id/mylayout1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView

        android:text="הוספת קבוצה חדשה"
        android:gravity="center|right"
        android:id="@+id/text_Home"
        android:textSize="14sp"
        android:textColor="#111"
        android:background="@android:color/transparent"
        android:visibility="gone"
        android:fontFamily="@font/font2"
        android:paddingRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"/>

    <EditText
        android:layout_marginTop="130dp"
        android:layout_gravity="center"
        android:id="@+id/EdtTeamName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:textSize="12sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/custom_team"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edit_text_design"
        android:hint="Team Name" />
    <EditText
        android:layout_gravity="center"
        android:id="@+id/EdtTeamManger"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:drawablePadding="12dp"
        android:ems="10"
        android:textSize="12sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@drawable/edit_text_design"
        android:drawableStart="@drawable/custom_person"
        android:hint="Team Manger"
        android:layout_marginBottom="30dp"
        />

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:layout_gravity="center"
            android:src="@drawable/salah2"
            android:visibility="visible"
            android:id="@+id/imgView"
            android:layout_width="200dp"
            android:layout_height="200dp" />
    </LinearLayout>
<LinearLayout


    android:gravity="bottom|center"
    android:weightSum="3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <android.widget.Button
        android:textSize="13sp"
        android:layout_marginLeft="10dp"
        android:layout_weight=".8"
        android:id="@+id/btnImage"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/btntest"
        android:shadowColor="#FF0026"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:text="Add Image"

        android:textColor="@color/white"
        />
    <android.widget.Button
        android:textSize="13sp"
        android:layout_weight=".8"
        android:id="@+id/btnAddTeam"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:shadowColor="#FF0026"
        android:shadowDx="0"
        android:shadowDy="0"

        android:shadowRadius="0"
        android:background="@drawable/btntest"
        android:textColor="@color/white"

        android:text="Add Team" />
    <android.widget.Button
        android:layout_marginLeft="10dp"
        android:layout_weight=".8"
        android:id="@+id/btnExcelTeam"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:textSize="13sp"
        android:shadowColor="#FF0026"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="0"
        android:background="@drawable/btntest"
        android:textColor="@color/white"

        android:text="Add file" />
</LinearLayout>
    <android.widget.Button

        android:id="@+id/btnShowTeams"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btntest"
        android:layout_gravity="center"
        android:text="show Team"
        android:visibility="gone"/>
    </LinearLayout>


</RelativeLayout>